// Ques: How to empty an array in JavaScript  (Do not reset it to new array and do not loop through to pop each value);
var arr = [1,2,3,4,5];
// just do 
arr.length = 0;       // it will make array empty


// Ques: How to check if an object is an array or not?
function checkArray(elem){
    return Array.isArray(elem);
}

console.log(checkArray([]));
console.log(checkArray({}));


// Ques: Given a string, reverse each word in a String

var str = "sare jahan se accha hindostaan hamara".split(" ").forEach(function(word){

    // Approach 2: 
    word.split("").reverse().join("");
})

// in the above code, the changes are not being saved, so what we can do we can use Map

var arr = "sare jahan se accha hindostaan hamara";
console.log(arr);
var savedStr = arr.split(" ").map(function(word){
    return word.split("").reverse().join("");
})

// now we can join each word

var finalans = savedStr.join(" ");
console.log(finalans);
